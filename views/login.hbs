<main class="crb-center-content crb-mt-sm">
    <h1 class="mb-4">Connexion</h1>
    <form class="form-signin crb-form" style="width: 600px; max-width: 95vw;" method="POST" action="">

        <img class="mb-4" src="./img/logo.png" alt="" width="120" height="120" style="margin: 0 auto; display: block;">

        {{> errorDisplayer }}

        <div class="form-group">
            <label for="inputEmail">Adresse Email</label>
            <input type="email" id="inputEmail" class="form-control {{#if (isInvalid 'email' errors)}}is-invalid{{/if}}" placeholder="Votre email" name="email">
        </div>

        <div class="form-group">
            <label for="passwordInput">Mot de passe</label>
            <input id="passwordInput" type="password" class="form-control {{#if (isInvalid 'password' errors)}}is-invalid{{/if}}" placeholder="Entrez votre mot de passe"
                name="password">
        </div>
        <button class="btn btn-lg btn-dark btn-block mt-4" type="submit">Se connecter</button>

        <small class="form-text text-muted mt-2"><em>Pas de compte ?</em></small>
        <a class="btn btn-lg btn-light btn-block crb-border-dark" href="register">S'inscrire</a>

        <p class="mt-5 mb-3 text-muted">&copy; Carabistouilles - Page de connexion</p>

    </form>
</main>